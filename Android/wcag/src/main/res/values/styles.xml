<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>
        <item name="android:textViewStyle">@style/textViewStyle</item>
    </style>

    <style name="buttonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:height">48dp</item>
    </style>

    <style name="menuButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:height">72dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="textViewStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="alertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Universal.Widget.ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/uvv_progress_rotate</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>
</resources>